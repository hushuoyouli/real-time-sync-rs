{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo-build-test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--no-run",
                "--package",
                "real-time-sync"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo-test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--package",
                "real-time-sync"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$rustc"
        }
    ]
}
